# HFL Mobile Production Environment

# Server Configuration
PORT=3001
NODE_ENV=production

# Eskiz.uz SMS API Configuration
ESKIZ_EMAIL=your_email@example.com
ESKIZ_PASSWORD=your_secure_password
ESKIZ_SENDER_NAME=your_sender_name
ESKIZ_API_TOKEN=your_api_token_here

# API Base URL (for production)
API_BASE_URL=https://your-backend-api.com

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Security
JWT_SECRET=your_jwt_secret_here
OTP_EXPIRE_MINUTES=5
MAX_OTP_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10